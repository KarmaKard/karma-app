[Unit]
Description=RethinkDB database server

[Service]
User=rethink
Group=rethink
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=rethinkdb
ExecStart=/usr/bin/rethinkdb serve --config-file /etc/rethinkdb/instances.d/rethinkdb.conf
KillMode=process
PrivateTmp=true

[Install]
WantedBy=multi-user.target
